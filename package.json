{
	"name": "need-ui",
	"private": false,
	"version": "0.0.22",
	"author": "lyohhhh <lyohhhh@163.com>",
	"description": "Vue3 + TS component library for my blog",
	"keywords": [
		"vue3",
		"typescript",
		"component"
	],
	"license": "MIT",
	"main": "dist/need-ui.cjs.js",
	"module": "dist/need-ui.esm.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/lyohhhh/need-ui"
	},
	"typings": "dist/src/index.d.ts",
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"dev": "vite",
		"lint": "eslint --fix --ext .js,vue,.ts,.tsx src/",
		"prettier": "prettier --config .prettierrc --write ./**/**/*.{js,css,vue,ts,tsx,scss}",
		"test": "vitest -w",
		"test:coverage": "vitest run --coverage",
		"build": "npm run build:clean && npm run build:esm && npm run build:cjs && npm run component:dts && npm run build:dts",
		"build:esm": "rollup  --config build/rollup.esm.config.js",
		"build:cjs": "rollup  --config build/rollup.cjs.config.js",
		"build:clean": "rimraf ./dist",
		"build:dts": "api-extractor run --local --verbose",
		"component:dts": "esbuild scripts/components-types.js --bundle --platform=node | node",
		"release": "npm publish"
	},
	"dependencies": {
		"async-validator": "^4.0.7",
		"mitt": "^3.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.17.5",
		"@babel/preset-env": "^7.16.11",
		"@babel/preset-typescript": "^7.16.7",
		"@microsoft/api-extractor": "^7.25.0",
		"@rollup/plugin-babel": "^5.3.1",
		"@rollup/plugin-node-resolve": "^13.3.0",
		"@types/js-cookie": "^3.0.2",
		"@types/node": "^17.0.29",
		"@typescript-eslint/parser": "^5.12.1",
		"@vitejs/plugin-vue": "^2.2.0",
		"@vitejs/plugin-vue-jsx": "^1.3.7",
		"@vue/test-utils": "^2.0.1",
		"autoprefixer": "^10.4.2",
		"c8": "^7.11.3",
		"cssnano": "^5.1.11",
		"eslint": "^8.9.0",
		"husky": "^7.0.4",
		"jsdom": "^19.0.0",
		"postcss": "^8.4.7",
		"postcss-import": "^14.1.0",
		"prettier": "^2.6.2",
		"rimraf": "^3.0.2",
		"rollup-plugin-commonjs": "^10.1.0",
		"rollup-plugin-postcss": "^4.0.2",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-typescript2": "^0.32.1",
		"sass": "^1.49.8",
		"stylelint": "^14.8.2",
		"tailwindcss": "^3.0.23",
		"typescript": "^4.5.4",
		"vite": "^2.8.0",
		"vitest": "^0.15.1",
		"vue": "^3.2.37",
		"vue-router": "^4.0.16"
	}
}
